<% include partials/header %>

  <h1>Genetic Javascript</h1>

  <div class="container">

    <div>
      <dl class="row">
        <dt class="col-sm-3">Goal String: </dt>
        <dd class="col-sm-9">
          <%= goalString %>
        </dd>

        <dt class="col-sm-3">Population Size: </dt>
        <dd class="col-sm-9">
          <%= populationSize %>
        </dd>

        <dt class="col-sm-3">Mutation Rate(%): </dt>
        <dd class="col-sm-9">
          <%= mutationRate %>
        </dd>

        <dt class="col-sm-3">CrossoverRate(%): </dt>
        <dd class="col-sm-9">
          <%= crossoverRate %>
        </dd>

        <dt class="col-sm-3">Generation: </dt>
        <dd class="col-sm-9">
          <%= generationNumber %>
        </dd>

        <dt class="col-sm-3">Most Fit Strand: </dt>
        <dd class="col-sm-9">
          <%= mostFitStrandChromosome %>
        </dd>

        <dt class="col-sm-3">Least Fit Strand: </dt>
        <dd class="col-sm-9">
          <%= leastFitStrandChromosome %>
        </dd>
      </dl>
    </div>

    <div class="progress">
      <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:<%= mostFitStrandFitnessPercent %>%"></div>
    </div>
    <%= mostFitStrandFitnessPercent %>%

      <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width:<%= leastFitStrandFitnessPercent %>%"></div>
      </div>
      <%= leastFitStrandFitnessPercent %>%


      <form action="/takeGeneticAlgorithmStep" method="POST">
        <div class="form-group row">
          <label for="stepsToTake" class="col-form-label col-form-label-lg">Steps To Take</label>
          <input type="number" class="form-control form-control-lg" id="stepsToTake" name="stepsToTake" required="True" min="1" max="10000" value="<%= previousStepsToTake %>" autofocus>
        </div>

        <div class="form-group row">
          <div class="col-sm-10">
            <button type="submit" class="btn btn-lg">Take Steps</button>
          </div>
        </div>
      </form>

  </div>

  <% include partials/footer %>
